<div id="post-{{id}}" class="card{{#if featured}} featured{{/if}}">
  <div class="card-img-container">
    <a class="card-img" href="{{url}}" style="background-image:url({{#if feature_image}}{{img_url feature_image}}{{else}}http://lorempixel.com/640/480/fashion/{{id}}{{/if}});"></a>
  </div>
  <div class="card-content">
    <div class="card-meta">
      <div class="meta-author">
        {{#primary_author}}
        <a href="{{url}}">
          {{#if profile_image}}
          <img class="meta-author-img" src="{{img_url profile_image}}" height="50" width="50" /> {{else}}
          <img class="meta-author-img" src="http://lorempixel.com/g/50/50/people" height="50" width="50" /> {{/if}}
        </a>
        {{/primary_author}}
      </div>
      <span class="card-meta-item meta-date meta-box">{{date published_at timeago="true"}}</span>
    </div>
    <h1 class="card-content-title"><a class="card-content-link" href="{{url}}">{{title}}</a></h1>
  </div>
</div>