<div id="post-{{id}}" class="{{post_class}}">
  <div class="post-header" style="background-image:url({{image}});">
    <div class="post-title">
      <h1 class="post-title-header">{{title}}</h1>
      {{#author}}
      <h2 class="post-byline">by {{name}}<br />on {{date published_at format="MMMM Do, YYYY [at] h:mma"}}</h2>
      <a href="{{url}}">
        {{#if image}}
        <img class="post-author-img" src="{{image}}" height="80" width="80" />
        {{else}}
        <img class="post-author-img" src="http://lorempixel.com/g/80/80/people" height="80" width="80" />
        {{/if}}
      </a>
      {{/author}}
    </div>
  </div>
  <div class="post-content">
    <article class="post-body typography-article">{{content}}</article>
    <div id="disqus_thread" class="post-comments"></div>
    <script type="text/javascript">
        var disqus_shortname = 'deprogramming';
        var disqus_identifier = '{{id}}';
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
  </div>
</div>
<script type="text/javascript">
  hljs.initHighlightingOnLoad();
</script>
