{{!< default}}
<div class="site-content">
  {{#author}}
    <div class="cards-header">
      {{#if image}}
      <img class="cards-header-img" src="{{image}}" height="120" width="120" />
      {{else}}
      <img class="cards-header-img" src="http://lorempixel.com/g/120/120/people" height="120" width="120" />
      {{/if}}
      <h1 class="cards-header-title">Posts by {{name}}</h1>
    </div>
  {{/author}}
  <div class="cards">
  {{#foreach posts}}
    {{> card}}
  {{/foreach}}
  </div>

  {{pagination}}
</div>
